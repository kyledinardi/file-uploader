<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <nav>
      <% if (currentUser) { %>
      <a href="/"><button>Home</button></a>
      <a href="/logout"><button>Log Out</button></a>
      <% } else { %>
      <a href="/login"><button>Log In</button></a>
      <a href="sign-up"><button>Sign Up</button></a>
      <% } %>
    </nav>
    <main>
      <div class="toolbar">
        <form action="/folders/<%= folderId %>/create-folder" method="post">
          <input
            type="text"
            name="folderName"
            id="folderName"
            placeholder="Folder Name"
            required
          />
          <button>Create Folder</button>
        </form>
        <% if (locals.folderNameErrors) { %>
        <ul>
          <% folderNameErrors.map((error) => { %>
          <li><%= error.msg %></li>
          <% }) %>
        </ul>
        <% } %>
        <form
          action="/folders/<%= folderId %>/upload"
          method="post"
          enctype="multipart/form-data"
          id="uploadForm"
        >
          <button type="button">
            <label id="uploadLabel" for="file">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                height="24px"
                viewBox="0 -960 960 960"
                width="24px"
              >
                <path
                  d="M440-200h80v-167l64 64 56-57-160-160-160 160 57 56 63-63v167ZM240-80q-33 0-56.5-23.5T160-160v-640q0-33 23.5-56.5T240-880h320l240 240v480q0 33-23.5 56.5T720-80H240Zm280-520v-200H240v640h480v-440H520ZM240-800v200-200 640-640Z"
                />
              </svg>
            </label>
          </button>
          <input type="file" name="file" id="file" required hidden />
        </form>
        <button>
          <a
            href="<%= title === 'Home' ? '/' : `/folders/${folderId}/up-directory` %>"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              height="24px"
              viewBox="0 -960 960 960"
              width="24px"
            >
              <path
                d="M440-160v-487L216-423l-56-57 320-320 320 320-56 57-224-224v487h-80Z"
              />
            </svg>
          </a>
        </button>
        <p><%= path %></p>
      </div>
      <div>
        <h2><%= title %></h1>
        <table>
          <tr>
            <th>Name</th>
            <th>Created At</th>
            <th>Updated At</th>
            <th>File Size</th>
            <th>Edit</th>
            <th>Delete</th>
            <th>Download</th>
          </tr>
          <% folders.map((folder) => { %>
          <tr>
            <td>
              <a href="/folders/<%= folder.id %>"><%= folder.name %></a>
            </td>
            <td><%= folder.created.toLocaleString() %></td>
            <td><%= folder.updated.toLocaleString() %></td>
            <td></td>
            <td>
              <a href="/folders/<%= folder.id %>/edit">
                <button>
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    height="24px"
                    viewBox="0 -960 960 960"
                    width="24px"
                  >
                    <path
                      d="M200-200h57l391-391-57-57-391 391v57Zm-80 80v-170l528-527q12-11 26.5-17t30.5-6q16 0 31 6t26 18l55 56q12 11 17.5 26t5.5 30q0 16-5.5 30.5T817-647L290-120H120Zm640-584-56-56 56 56Zm-141 85-28-29 57 57-29-28Z"
                    />
                  </svg>
                </button>
              </a>
            </td>
            <td>
              <a href="/folders/<%= folder.id %>/delete">
                <button>
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    height="24px"
                    viewBox="0 -960 960 960"
                    width="24px"
                  >
                    <path
                      d="M280-120q-33 0-56.5-23.5T200-200v-520h-40v-80h200v-40h240v40h200v80h-40v520q0 33-23.5 56.5T680-120H280Zm400-600H280v520h400v-520ZM360-280h80v-360h-80v360Zm160 0h80v-360h-80v360ZM280-720v520-520Z"
                    />
                  </svg>
                </button>
              </a>
            </td>
            <td></td>
          </tr>
          <% }) %> <% files.map((file) => { %>
          <tr>
            <td><%= file.name %></td>
            <td><%= file.created.toLocaleString() %></td>
            <td><%= file.updated.toLocaleString() %></td>
            <td><%= file.size %></td>
            <td>
              <a href="/files/<%= file.id %>/edit">
                <button>
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    height="24px"
                    viewBox="0 -960 960 960"
                    width="24px"
                  >
                    <path
                      d="M200-200h57l391-391-57-57-391 391v57Zm-80 80v-170l528-527q12-11 26.5-17t30.5-6q16 0 31 6t26 18l55 56q12 11 17.5 26t5.5 30q0 16-5.5 30.5T817-647L290-120H120Zm640-584-56-56 56 56Zm-141 85-28-29 57 57-29-28Z"
                    />
                  </svg>
                </button>
              </a>
            </td>
            <td>
              <a href="/files/<%= file.id %>/delete">
                <button>
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    height="24px"
                    viewBox="0 -960 960 960"
                    width="24px"
                  >
                    <path
                      d="M280-120q-33 0-56.5-23.5T200-200v-520h-40v-80h200v-40h240v40h200v80h-40v520q0 33-23.5 56.5T680-120H280Zm400-600H280v520h400v-520ZM360-280h80v-360h-80v360Zm160 0h80v-360h-80v360ZM280-720v520-520Z"
                    />
                  </svg>
                </button>
              </a>
            </td>
            <td>
              <a
                href="/files/<%= file.id %>/download"
                target="_blank"
                rel="noopener noreferrer"
              >
                <button>
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    height="24px"
                    viewBox="0 -960 960 960"
                    width="24px"
                  >
                    <path
                      d="M480-320 280-520l56-58 104 104v-326h80v326l104-104 56 58-200 200ZM240-160q-33 0-56.5-23.5T160-240v-120h80v120h480v-120h80v120q0 33-23.5 56.5T720-160H240Z"
                    />
                  </svg>
                </button>
              </a>
            </td>
          </tr>
          <% }) %><% if (folders.length === 0 && files.length === 0) { %>
          <tr>
            <td class="emptyTableRow" colspan="7">This folder is empty</td>
          </tr>
          <% } %>
        </table>
      </div>
    </main>
    <script>
      document.getElementById('file').addEventListener('change', () => {
        document.getElementById('uploadForm').submit();
      });
    </script>
  </body>
</html>
